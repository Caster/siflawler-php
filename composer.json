{
    "name": "caster/siflawler",
    "description": "A simple, flexible crawler, written in PHP.",
    "keywords": ["crawling", "xpath"],
    "homepage": "https://github.com/Caster/siflawler-php",
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "Thom Castermans",
            "email": "thom.castermans@gmail.com",
            "homepage": "http://www.denvelop.nl/en",
            "role": "Developer"
        }
    ],

    "require": {
        "php": ">=5.3.0",
        "ext-curl": "*",
        "ext-dom": "*",
        "ext-json": "*"
    },

    "autoload": {
        "psr-4": {
            "siflawler\\": "lib/siflawler/"
        }
    },

    "require-dev": {
        "phpunit/phpunit": "~5.7"
    },

    "autoload-dev": {
        "psr-4": {
            "siflawlerTest\\": "tests/"
        }
    },

    "scripts": {
        "test": "phpunit --configuration tests/phpunit.xml tests"
    }
}
